{% extends "base.html.twig" %}

{% block title %}Destinations{% endblock %}

{% block body %}
    <header>
        <section id="home">
            <nav>
                <p>Destinations</p>
                <ul>
                    <li><a href="#home" class="active-W">Accueil</a></li>
                    <li><a href="#destinations">Destinations</a></li>
                    <li><a href="">A propos</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
                <div class="fixed-nav">
                    <div>
                        <p>Destinations</p>
                        <ul>
                            <li><a href="#home" class="active-B">Accueil</a></li>
                            <li><a href="#destinations">Destinations</a></li>
                            <li><a href="">A propos</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="title">
                <h1>We show, you go !</h1>
                <p>Réalisé from scratch en PHP orienté objet, avec autoload PSR-4, Twig, SASS, et un peu de JavaScript.</p>
            </div>
        </section>
    </header>

    <main>
        <section id="destinations">
            <h2>Nos destinations</h2>
            <ul>
                <li>Tout voir</li>
                <li>Forêt</li>
                <li>Montagne</li>
                <li>Lac</li>
                <li>Océan</li>
            </ul>
            <div class="grid">
                <article>
                    <img src="/img/forest1.jpg" alt="">
                    <div class="img-hover">
                        <h3>Forest 1</h3>
                        <p>Une magnifique foret</p>
                        <a href="">ZOOM</a>
                    </div>
                </article>
                <article>
                    <img src="/img/mountain1.jpg" alt="">
                    <div class="img-hover">
                        <h3>Mountain 1</h3>
                        <p>Une magnifique montagne</p>
                        <a href="">ZOOM</a>
                    </div>
                </article>
                <article>
                    <img src="/img/lake1.jpg" alt="">
                </article>
                <article>
                    <img src="/img/ocean1.jpg" alt="">
                </article>
                <article>
                    <img src="/img/forest2.jpg" alt="">
                </article>
                <article>
                    <img src="/img/mountain2.jpg" alt="">
                </article>
                <article>
                    <img src="/img/lake2.jpg" alt="">
                </article>
                <article>
                    <img src="/img/ocean2.jpg" alt="">
                </article>
                <article>
                    <img src="/img/forest3.jpg" alt="">

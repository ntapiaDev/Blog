                <article>
                    <img src="/img/lake3.jpg" alt="">
                </article>
                <article>
                    <img src="/img/ocean3.jpg" alt="">
                </article>
            </div>
        </section>

        <section id="contact">
            <h2>Nous contacter</h2>
            <div class="contact-container">
                <form action="">
                    <h3>Nous écrire</h3>
                    <input type="text" name="name" id="name" placeholder="Nom">
                    <input type="email" name="email" id="email" placeholder="Adresse email">
                    <textarea name="message" id="message" cols="30" rows="5" placeholder="Votre message"></textarea>
                    <button>Envoyer</button>
                </form>
                <div class="contact-info">
                    <div class="contact-info-container">
                    <h3>Contact</h3>
                    <h4>Email</h4>
                    <p><a href="mailto:adresse@mail.com?subject=Mon choix de destination">adresse@mail.com</a></p>
                    <h4>Téléphone</h4>
                    <p>01.23.45.67.89</p>
                    <h4>Adresse</h4>
                    <p>12 rue des chats<br>
                    76100 Rouen</p>
                    <ul>
                        <li><span class="fa-brands fa-facebook-f"></span></li>
                        <li><span class="fa-brands fa-twitter"></span></li>
                        <li><span class="fa-brands fa-instagram"></span></li>
                    </ul>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}